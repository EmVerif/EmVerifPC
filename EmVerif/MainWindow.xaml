<Window x:Class="EmVerif.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:editor="clr-namespace:RoslynPad.Editor;assembly=RoslynPad.Editor.Windows"
        xmlns:local="clr-namespace:EmVerif"
        mc:Ignorable="d"
        Title="EmVerif" Height="450" Width="800" Closing="Window_Closing">
    <Grid>
        <editor:RoslynCodeEditor x:Name="roslynCodeEditor" Loaded="RoslynCodeEditor_Loaded" Margin="0,35,0,0"/>
        <Button x:Name="button" Content="{Binding ButtonText}" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <ComboBox x:Name="comboBox" ItemsSource="{Binding ItemsSource}" HorizontalAlignment="Left" Margin="90,8,0,0" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
